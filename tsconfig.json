{
  "compilerOptions": {
    "resolveJsonModule": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "lib": ["es2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true
  },

  "include": ["./src/**/*"]
}
